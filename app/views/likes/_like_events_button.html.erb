<% if current_user.like_event?(event) %>
  <%= form_for(current_user.likes.find_by(event_id: event.id),html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :event_id, event.id %>
    <%= f.submit 'お気に入りをやめる', class: 'btn btn-danger btn-block btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :event_id, event.id %>
    <%= f.submit 'お気に入りする', class: 'btn btn-primary btn-block btn-xs' %>
  <% end %>
<% end %>