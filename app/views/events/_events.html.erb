<ul class="media-list">
  <% events.each do |event| %>
    <li class="media">
      <div class="media-left">
        <div><%= link_to event.user.name, user_path(event.user) %></div>
        <img class="media-object img-rounded" src="<%= gravatar_url(event.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <p><%= event.title %></p>
        </div>
        <div>
          <p><%= event.event_start %>～<%= event.event_end %></p>
        </div>
        <div>
          <p><%= event.area.content %>&nbsp;&nbsp;&nbsp;<%= event.prefecture.content %></p>
        </div>
        <div>
          <p>募集人数&nbsp&nbsp<%= event.number_of_people %>人</p>
        </div>
        <div>
          <p>料金&nbsp&nbsp￥<%= event.charge %></p>
        </div>
        <div>
          <p>概要&nbsp&nbsp<%= event.content %></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>